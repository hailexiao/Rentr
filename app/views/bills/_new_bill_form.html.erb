<%= simple_form_for [@rental_unit, @bill], remote: true do |f| %>
  <%= f.input :month, collection: 1..12,
    label_method: Proc.new { |m| I18n.t("date.month_names")[m] },
    selected: 1 %>
  <%= f.input :amount %>
  <%= f.button :submit, class: 'button radius', id: 'new-bill' %>
<% end %>

<script>
$(document).ready(
  $("#new_bill").on("ajax:success", function(event, data, status, xhr) {
    $("#newBill").foundation('reveal','close');
  }
  )
)
</script>
