<%= simple_form_for @rental_unit do |f| %>
  <%= f.input :address %>
  <%= f.input :number_of_bedrooms, collection: 0..7, selected: 0 %>
  <%= f.input :type_of_dwelling %>
  <%= f.input :monthly_rent %>
  <%= f.input :utilities_included %>
  <%= f.association :gas_utility, selected: "National Grid" %>
  <%= f.association :electric_utility, selected: "Eversource" %>
  <%= f.association :neighborhood %>
  <%= f.label :photos, "Add some photos!" %>
  <%= f.file_field :photos, multiple: true %>
  <%= f.button :submit, class: 'radius' %>
<% end %>
